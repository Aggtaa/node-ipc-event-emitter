{
  "compilerOptions": {
    "target": "es6",
    "rootDir": ".",
    "outDir": "dist",
    "module": "commonjs",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": false,
    "experimentalDecorators": true,
    "declaration": true,
    "lib": [ "es6" ],
    "types": ["node"],
    "strict": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
